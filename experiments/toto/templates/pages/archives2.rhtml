<div class="post">
	<h3>Archives for: <%= @path %></h3>
	<ul>
	  <% if archives.length > 0 %>
	    <% for entry in archives %>
	      <li>
	        <a href="<%= entry.url %>"><%= entry.title %></a>
	      </li>
	    <% end %>
	  <% else %>
	    There are no articles for this date.
	  <% end %>
	</ul>
</div>