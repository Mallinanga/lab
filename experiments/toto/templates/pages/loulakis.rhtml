<section id="articles">
						<% @articles.select {|a| a[:category] == 'loulakis' }[0...15].each do |article| %>
						<article class="post">
							<header>
								<h1><a href="<%= article.path %>">&#8594; <%= article.title %></a></h1>
							</header>
							<section class="content">
<%= article.summary %>
							</section>
						</article>
<% end %>
					</section>