<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US">
<head profile="http://gmpg.org/xfn/11">
<html>
	<head>
		<link rel="alternate" type="application/atom+xml" title="<%= title.capitalize %> - RSS" href="/index.xml" />
		<link rel="alternate" type="application/rss+xml" title="<%= title.capitalize %> - FeedBurner" href="http://feeds.feedburner.com/panospgn" />
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta name="description" content="<%= @context[:description] || 'Panos G. Pgn Notes, Tids & Bits' %>" />
		<meta name="tags" content="<%= @context[:tags] || 'no-tag' %>" />
		<link rel="stylesheet" type="text/css" href="/css/main.css">
		<link rel="stylesheet" type="text/css" href="/css/sunburst.css">
		<title><% if @path == 'index' %>Toto<% elsif @path.split('/').compact.length == 4 %>Toto - <%= title.capitalize %><% else %>Toto - <%= @path.capitalize.gsub(/[-]/, ' ') %><% end %></title>
	</head>
	<body>
		<div id="wrap">
			<div id="bridge">
				<div id="bridge_left"></div>
				<div id="bridge_middle"><%# <div id="bridge_content"></div> %></div>
				<div id="bridge_right"></div>
			</div>
			<div id="main">
				<section>
					<%= yield %>
				</section>
			</div>
			<div id="sidebar">
				<ul>
					<li <%= ' class="active"' if @path == 'index' %>><a href="/">home</a></li>
					<li <%= ' class="active"' if @path == 'chronoarchive' %>><a href="/chronoarchive">chronoarchive</a></li>
					<li <%= ' class="active"' if @path == 'archives' %>><a href="/archives">archives</a></li>
					<% if false %><li <%= ' class="active"' if @path == 'about' %>><a href="/about">about</a></li><% end %>
					<li>&nbsp;</li>
					<li <%= ' class="active"' if @path == 'loulakis' %>><a href="/loulakis">loulakis</a></li>
					<li <%= ' class="active"' if @path == 'tags' %>><a href="/tags">tags</a></li>
					<li <%= ' class="active"' if @path == 'misc' %>><a href="/misc">misc</a></li>
				</ul>
			</div>
		</div>
		<footer>
		</footer>
		<a href="#top" id="top-link">&#8593;</a>
		<script type="text/javascript" src="/js/highlight.pack.js"></script>
		<script type="text/javascript">
			hljs.initHighlightingOnLoad();
		</script>
		<script class=jsbin type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
		<script type="text/javascript" src="/js/scrollto.js"></script>
		<script type="text/javascript">
		jQuery.fn.topLink = function(settings) {
			settings = jQuery.extend({
				min: 1,
				fadeSpeed: 500
			}, settings);
			return this.each(function() {
				var el = $(this);
				el.hide();
				$(window).scroll(function() {
					if($(window).scrollTop() >= settings.min)
					{
						el.fadeIn(settings.fadeSpeed);
					}
					else
					{
						el.fadeOut(settings.fadeSpeed);
					}
				});
			});
		};
		$(document).ready(function() {
			$('#top-link').topLink({
				min: 400,
				fadeSpeed: 500
			});
			$('#top-link').click(function(e) {
				e.preventDefault();
				$.scrollTo(0,300);
			});
		});
		</script>
	</body>
</html>
